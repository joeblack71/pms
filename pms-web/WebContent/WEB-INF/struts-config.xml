<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
   <data-sources />
   <form-beans>
   		<form-bean name="LoginForm"
   			type="com.myco.central.form.LoginForm">
   		</form-bean>
   		<form-bean name="ReservationForm"
   			type="com.myco.central.form.ReservationForm">
   		</form-bean>
   		<form-bean name="AvailabilityForm"
   			type="com.myco.central.form.AvailabilityForm">
   		</form-bean>
   </form-beans>
   <global-exceptions />
   
   <global-forwards>
   		<forward name="access" path="/login.jsp"></forward>
   </global-forwards>
   
   <action-mappings>
   		<action path="/Authenticate"
   			type="com.myco.central.action.AuthenticateAction"
   			name="LoginForm"
   			scope="request">
   			<forward name="success" path="/StartApplication.do"></forward>
   			<forward name="error" path="/login.jsp"></forward>
   		</action>
   		<action path="/StartApplication"
   			type="com.myco.central.action.InitCentralSessionAction">
   			<forward name="success" path="/startApplication.html"></forward>
   		</action>

   		<!-- Reservations -->

   		<action path="/ReservationList"
   			type="com.myco.central.action.ReservationDispatchAction"
   			parameter="reservationList">
   			<forward name="success" path="/reservationSearch.jsp"></forward>
   		</action>
   		<action path="/ReservationShow"
   			type="com.myco.central.action.ReservationDispatchAction"
   			parameter="reservationShow"
   			name="ReservationForm" scope="request" validate="false">
   			<forward name="success" path="/reservation.jsp" />
   		</action>
   		<action path="/ReservationSave"
   			type="com.myco.central.action.ReservationDispatchAction"
   			parameter="reservationSave"
   			name="ReservationForm" scope="request" validate="false">
   			<forward name="success" path="/reservation.jsp" />
   		</action>
   		
   		<!-- Customer -->
   		<action path="/CustomerList"
   			type="com.myco.central.action.CustomerDispatchAction"
   			parameter="customerList">
   			<forward name="success" path="/customerSearch.jsp"></forward>
   		</action>

   		<!-- Company -->
   		<action path="/CompanyList"
   			type="com.myco.central.action.CompanyDispatchAction"
   			parameter="companyList">
   			<forward name="success" path="/companySearch.jsp"></forward>
   		</action>

   		<!-- Rates Manager -->
   		<action path="/RoomRateList"
   			type="com.myco.central.action.RoomRateDispatchAction"
   			parameter="roomRateList">
   			<forward name="success" path="/roomRateSearch.jsp"></forward>
   		</action>

   		<!-- Availability -->
   		<action path="/AvailabilityShow"
   			type="com.myco.central.action.AvailabilityDispatchAction"
   			parameter="availabilityShow"
   			name="AvailabilityForm"
   			scope="request"
   			validate="false">
   			<forward name="success" path="/availabilityShow.jsp"></forward>
   		</action>
   		
   		<!-- Reservation Reports -->
   		<action path="/GuestbookingReport"
   			type="com.myco.central.action.GuestbookingReportsDispatchAction"
   			parameter="guestbookingReport">
   			<forward name="success" path="/guestbookingReports.jsp"></forward>
   		</action>
   		
		<!-- AJAX calls -->
		
   		<action path="/_RoomRateValue"
   			type="com.myco.central.action.RoomRateDispatchAction"
   			parameter="getRoomRateValue">
   			<forward name="success" path="/_roomRateValue.jsp"></forward>
   		</action>
   </action-mappings>
   
   <controller bufferSize="4096" debug="0" />
   <message-resources parameter="com.myco.central.struts.ApplicationResources" />
</struts-config>

